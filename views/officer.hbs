{{> top-nav isLoggedIn=isLoggedIn}}

    <div class="container">
        <h2>Warnings Tracker</h2>
        <div class="content">
            <div class="warnings-tracker">
                <div class="profile-card">
                    <div class="left-profile-card">
                        <div class="profile-image">
                            <span class="emoji"><img src="images/Avatar.svg"></span>
                        </div>
                        <div class="profile-info">
                            <span><h3>{{officer.lastname}}, {{officer.firstname}}</h3></span>
                            <p>Officer</p>
                        </div>
                    </div>
                </div>   
                <div class="profile-body">
                    <div class="profile-details">
                        <div class="info-item">
                            <span class="label">Contact Number:</span>
                            <span class="value" id="contact-number">{{officer.contact}}</span>
                        </div>
                        <div class="info-item">
                            <span class="label">Email:</span>
                            <span class="value" id="email">{{officer.email}}</span>
                        </div>
                        <div class="info-item">
                            <span class="label">ID #:</span>
                            <span class="value" id="id-number">{{officer.studentId}}</span>
                        </div>
                        <div class="info-item">
                            <span class="label">Disciplinary Status:</span>
                            <span class="value" id="status">{{officer.status}}</span>
                        </div>
                        <div class="info-item">
                            <span class="label">Violations:</span>
                            <span class="value pending" id="violations">{{officer.violations}} Pending</span>
                        </div>
                    </div>
                    <div class="footer">
                        <a href="#" class="makeReport" id="makeReport">Dispute a Report</a>
                    </div>
                </div> 
            </div>

            <div class="warnings-list">
                <div class="warning-table">
                    <table id="warningsTable">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Date</th>
                                <th>OIC</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each violation-list}}
                            <tr data-title="{{case_title}}" data-desc="{{case_desc}}">
                                <td>{{case_title}}</td>
                                <td>{{case_date}}</td>
                                <td>{{authorid}}</td>
                                <td><div class="status-icon {{#eq case_status 'cleared'}}green{{else}}orange{{/eq}}"></div></td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <div class="warning-details">
                    <h3 id="warningTitle">Warning 1 Title</h3>
                    <p id="warningDesc">Description</p>
                </div>
            </div>
        </div>
    </div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
    const table = document.getElementById('warningsTable');
    const warningTitle = document.getElementById('warningTitle');
    const warningDesc = document.getElementById('warningDesc');

    table.addEventListener('click', async function(e) {
        const row = e.target.closest('tr');
        if (row) {
            const title = row.getAttribute('data-title');
            const desc = row.getAttribute('data-desc');
            warningTitle.textContent = title;
            warningDesc.textContent = desc;
        }
    });
});
</script>